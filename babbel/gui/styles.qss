/* Base dark theme touch-up; full polish will come later */
QMainWindow, QWidget { background-color: #131314; color: #e8e8e8; }
QScrollArea { background-color: transparent; }
QPushButton {
  border-radius: 14px; padding: 6px 12px; background: #2f2f2f; color: #cfcfcf;
}
QPushButton:checked { background: #10a37f; color: white; font-weight: 600; }

QLabel#emobadge { background: #2a2a2b; color: #cccccc; border-radius: 10px; padding: 2px 8px; }
